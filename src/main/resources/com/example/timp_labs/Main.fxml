<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.* ?>
<?import javafx.scene.layout.* ?>
<?import javafx.scene.text.* ?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>


<?import javafx.scene.shape.Rectangle?>
<GridPane fx:id="pane" alignment="CENTER" focusTraversable="true" onKeyPressed="#keyPressed" prefHeight="750.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.timp_labs.Controller">
  <children>
    <Pane fx:id="modalPane" focusTraversable="true" onKeyPressed="#keyPressed" prefHeight="750.0" prefWidth="900.0">
      <children>
        <Label fx:id="labelTextTIMER" alignment="CENTER" layoutX="-180" layoutY="10" text="Таймер:" >
          <font>
            <Font name="System Bold" size="22.0" />
          </font>
        </Label>
        <Label fx:id="labelTimer" alignment="CENTER" layoutX="-80.0" layoutY="13.0" text="00:00" textFill="#000000">
          <font>
            <Font name="Arial Bold" size="22.0" />
          </font>
        </Label>
        <Label fx:id="statistic" alignment="CENTER" layoutX="105.0" layoutY="271.0" prefHeight="225.0" prefWidth="698.0" textAlignment="CENTER" textFill="#000000" wrapText="true">
          <font>
            <Font name="JetBrains Mono SemiBold" size="26.0" />
          </font>
        </Label>

        <Button fx:id="btnStart" text="Старт" onAction="#clickStart" layoutX="-190" layoutY="40" prefHeight="50" prefWidth="80">
          <font>
            <Font name="Arial Bold" size="18.0" />
          </font>
        </Button>
        <Button fx:id="btnStop" text="Стоп" onAction="#clickStop" layoutX="-100" layoutY="40" prefHeight="50" prefWidth="80">
          <font>
            <Font name="Arial Bold" size="18.0" />
          </font>
        </Button>
        <RadioButton fx:id="btnShowInfo" text="Показывать информацию" onAction="#clickShowInfo" layoutX="-190" layoutY="100" prefHeight="30" prefWidth="200">
          <font>
            <Font name="Arial" size="13.0" />
          </font>
        </RadioButton>
        <RadioButton fx:id="btnShowTime" text="Показать время" onAction="#clickShowTime" layoutX="-190" layoutY="130" prefHeight="30" prefWidth="200">
          <font>
            <Font name="Arial" size="13.0" />
          </font>
        </RadioButton>
        <RadioButton fx:id="btnHideTime" text="Скрыть время" onAction="#clickHideTime" layoutX="-190" layoutY="150" prefHeight="30" prefWidth="200">
          <font>
            <Font name="Arial" size="13.0" />
          </font>
        </RadioButton>
        <Rectangle height="600" width="8" fill="black"/>

      </children>
    </Pane>
  </children>
  <columnConstraints>
    <ColumnConstraints />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
  </rowConstraints>
</GridPane>



